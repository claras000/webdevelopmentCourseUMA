    <!-- #nav-->
    <%- include('nav') %>
    <!-- #end nav -->

    <!-- #rchatbot-->
    <div class="m-5">
      <h1>IT Hardware Chatbot</h1>
      <p>ask a question about it hardware</p>
      <input
