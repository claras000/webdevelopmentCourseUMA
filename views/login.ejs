<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Hardware Webshop Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      type="text/css"
      media="screen"
      href="/CSS/main.css"
    />
    <!-- put script here -->
    <script src=""></script>
  </head>
  <body>
    <!-- #navbar-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-custom">
      <a href="home.html" Link class="logo">
        <img src="../images/logo.png" alt="Logo" class="imgLogo" />
      </a>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active nav-item-custom">
            <a class="nav-link" href="home.html" id="home">Home </a>
          </li>

          <li class="nav-item active nav-item-custom">
            <a class="nav-link" href="about.html" id="about">About </a>
          </li>

          <li class="nav-item active nav-item-custom">
            <a class="nav-link" href="products.html" id="product">Products</a>
          </li>

          <li class="nav-item active nav-item-custom">
            <a class="nav-link" href="contact.html" id="contact">Contact </a>
          </li>
          <li>
            <a
              href="shoppingcard.html"
              Link
              class="shoppingButton"
              id="shoppingcard"
            >
              <img
                src="../images/shoppingcard.png"
                alt="shoppingcard icon"
                class="iconSize"
              />
            </a>
          </li>
          <li>
            <a href="profil.html" Link class="profilButton" id="profil">
              <img src="../images/user.png" alt="user icon" class="iconSize" />
            </a>
          </li>
          <li>
            <a href="login.html" Link class="LoginStatus">
              <button type="button" class="buttonLogin btn btn-primary">
                Login
              </button>
            </a>
          </li>
        </ul>
      </div>
    </nav>
    <!-- #end navbar -->

    <!-- #login-->
    <section class="login">
      <h1><b>Register Now</b></h1>
      <div class="form">
        <form class="login-form" id="submitForm" action="/login" method="post">
          <label for="email">Email:</label>

          <input type="email" id="email" name="email" required /><br /><br />

          <label for="password">Password:</label>

          <input
            type="password"
            id="password"
            name="password"
            required
          /><br /><br />

          <br /><br />

          <button
            type="submit"
            id="submitButton"
            class="button btn btn-primary"
          >
            Login
          </button>
          <br /><br />
          <p>
            You dont have an account ?
            <a href="/register" Link>Register Now</a>
          </p>
          <div id="problemReport"></div>
        </form>
      </div>
    </section>
    <!-- #end login -->
  </body>
</html>
